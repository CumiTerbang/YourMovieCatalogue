<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.haryop.yourmoviecatalogue.ui.homepage.HomePageFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home_page">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detailPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailPageFragment"
        android:name="com.haryop.yourmoviecatalogue.ui.detailpage.DetailPageFragment"
        android:label="Detail Page"
        tools:layout="@layout/fragment_detail_page">
    </fragment>

</navigation>